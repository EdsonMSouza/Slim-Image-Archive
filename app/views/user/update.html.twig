{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/categories"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="/users">Users</a></li>
        <li class="active">{{ user.getEmail }}</li>
    </ol>
    <form method="post" action="/users/{{ user.getId }}/update">
        <div class="form-group">
            <label for="user-email">User email</label>
            <input type="email" name="email" class="form-control" id="user-email" value="{{ user.getEmail }}" autofocus required>
        </div>
        <div class="form-group">
            <label for="user-password">User password</label>
            <input type="password" name="password" class="form-control" id="user-password" required>
        </div>
        <div class="form-group">
            <label for="user-role">User role</label>
            <select name="role" class="form-control" id="user-role">
                <option value="3" {% if user.getRole == 3 %}selected{% endif %}>Normal</option>
                <option value="2" {% if user.getRole == 2 %}selected{% endif %}>Extended</option>
                <option value="1" {% if user.getRole == 1 %}selected{% endif %}>Admin</option>
            </select>
            <p class="help-block"><b>Normal</b> - Upload only / <b>Extended</b> - Upload, Edit & Delete / <b>Admin</b> - Manage Users</p>
        </div>
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Save</button>
        <a href="/users" class="btn btn-default">Cancel</a>
    </form>
{% endblock %}