{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/categories"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active">Users</li>
    </ol>
    <a href="/users/create" class="add-btn btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create user</a>
    <table id="users" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>User email</th>
            <th>Role</th>
            <th>Created</th>
            <th>Updated</th>
            <th class="action">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.getEmail }}
                </td>
                <td>
                    {% if user.getRole == constant('User::ADMIN') %}Admin
                    {% elseif user.getRole == constant('User::EXTENDED') %}Extended
                    {% elseif user.getRole == constant('User::NORMAL') %}Normal
                    {% endif %}
                </td>
                <td>
                    {{ user.getCreated }}
                </td>
                <td>
                    {{ user.getUpdated }}
                </td>
                <td>
                    <a href="/users/{{ user.getId }}/update" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    <a href="/users/{{ user.getId }}/delete" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}